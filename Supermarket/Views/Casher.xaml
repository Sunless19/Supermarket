<Window x:Class="Supermarket.Views.Casher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.ViewModels"
        mc:Ignorable="d"
        Title="Casher" Height="900" Width="1400">
    <Window.DataContext>
        <local:CasherVM/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/background.png"/>
        </Grid.Background>
        <Button Content="Search" HorizontalAlignment="Center" Margin="0,236,0,0" VerticalAlignment="Top" Height="82" Width="302" Background="White" FontSize="19" Command="{Binding SearchCommand}"/>
        <Button Content="New Receipt" HorizontalAlignment="Center" Margin="0,367,0,0" VerticalAlignment="Top" Height="82" Width="302" FontSize="19" Command="{Binding NewReceiptCommand}"/>
        <Button Content="Receipts" HorizontalAlignment="Center" Margin="0,492,0,0" VerticalAlignment="Top" Height="82" Width="302" FontSize="19" Command="{Binding SeeReceiptCommand}"/>
    </Grid>
</Window>